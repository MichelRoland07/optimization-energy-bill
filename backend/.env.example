# Database Configuration
DATABASE_URL=sqlite:///./optimisation_sabc.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/optimisation_sabc

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email Configuration (Gmail example)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_FROM=noreply@sabc-optimization.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com

# Admin Email (receives new registration notifications)
ADMIN_EMAIL=admin@sabc.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
ADMIN_DASHBOARD_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OTP Configuration
OTP_EXPIRATION_HOURS=24

# Environment
ENVIRONMENT=development
